---
import { useTranslations, getLangFromUrl } from 'src/i18n/utils'
import { EMAIL } from '@/constants'
import { Youtube, Instagram, Facebook } from 'lucide-react'
import SocialLink from './SocialLink.astro'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<footer
  class="mb-5 mt-20 flex flex-col items-start justify-between gap-4 space-y-1 px-4 md:flex-row md:px-[calc(3rem+39px)]"
>
  <div>
    <p>{t('footer.main')}</p>
    <p>{t('footer.address')}</p>
    <p>
      e-mail:
      <a href={`mailto:${EMAIL}`}>
        {EMAIL}
      </a>
    </p>
  </div>
  <div class="space-y-2">
    <SocialLink url="https://www.facebook.com/babynyar.gov.ua">
      <Facebook slot="icon" />
      <Fragment slot="text">Facebook</Fragment>
    </SocialLink>
    <SocialLink url="https://www.instagram.com/babyn.yar/">
      <Instagram slot="icon" />
      <Fragment slot="text">Instagram</Fragment>
    </SocialLink>
    <SocialLink url="https://www.youtube.com/@BabynYar-memorial">
      <Youtube slot="icon" />
      <Fragment slot="text">Youtube</Fragment>
    </SocialLink>
  </div>
</footer>
